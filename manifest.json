{
    "manifest_version": 2,
    "name": ":quitVIM",
    "description": "Replace every instance of the word 'Vim' with a word of your chosing!",
    "version": "1.0",
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["script.js"]
        }
    ],

    "options_ui": {
        "page": "options.html"
    },

    "permissions": ["storage"],

    "applications": {
        "gecko": {
        "id": "test@email.com"
        }
    },

    "icons": {
        "48": "icons/icon.png"
    },

    "browser_action": {
        "default_icon": "icons/icon.png"
    }
}